# Server Configuration
# Port number for the HTTP server (default: 8917)
PORT=8917

# Environment mode: development, production, or test
NODE_ENV=development

# API Base URL (Optional - for OpenAPI documentation)
# If not set, will use VERCEL_URL (auto-set by Vercel) or localhost
# Example: https://api.yourdomain.com
# API_BASE_URL=https://your-production-url.com

# Database Configuration
# PostgreSQL connection string for the external database
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://user:password@localhost:5432/krl_api

# Upstream API Configuration
# Base URL for the Indonesian Commuterline API
UPSTREAM_API_URL=https://api-partner.krl.co.id

# Bearer token for authenticating with the Upstream API
# Obtain this token from the API provider
OFFICIAL_API_TOKEN=your_bearer_token_here

# Sync Job Configuration
# Cron expression for scheduling the sync job
# Default: "59 16 * * *" (23:59 WIB / 16:59 UTC)
# Format: minute hour day month weekday
SYNC_CRON_EXPRESSION=59 16 * * *

# Enable schedule synchronization during sync job
# Set to "true" to enable, "false" to disable (default: true)
ENABLE_SCHEDULE_SYNC=true
